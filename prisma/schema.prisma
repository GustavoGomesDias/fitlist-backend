generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  trainingPlan trainingPlan[]
}

model trainingPlan {
  id          String        @id @default(uuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  user        user          @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekDayPlan weekDayPlan[]
}

model weekDayPlan {
  id             String       @id @default(uuid())
  day            Int
  rest           Boolean
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @default(now())
  trainingPlanId String
  exercism       exercism[]
  trainingPlan   trainingPlan @relation(fields: [trainingPlanId], references: [id], onDelete: Cascade)
}

model exercism {
  id            String      @id @default(uuid())
  time          Int?
  createdAt     DateTime    @default(now())
  sequence      Int
  updatedAt     DateTime    @default(now())
  weekDayPlanId String
  description   String
  name          String
  repetition    Int?
  serie         Int
  timeOff       Int         @default(0)
  weekDayPlan   weekDayPlan @relation(fields: [weekDayPlanId], references: [id], onDelete: Cascade)
}
